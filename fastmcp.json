{
  "name": "mcp-server-template",
  "version": "0.1.0",
  "description": "A production-ready MCP server template",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "server": {
    "type": "stdio",
    "features": {
      "tools": true,
      "resources": true,
      "prompts": true,
      "sampling": false
    }
  },
  "authentication": {
    "enabled": false,
    "type": "bearer",
    "config": {
      "token_env_var": "MCP_AUTH_TOKEN"
    }
  },
  "oauth": {
    "enabled": false,
    "providers": {
      "github": {
        "client_id_env": "GITHUB_CLIENT_ID",
        "client_secret_env": "GITHUB_CLIENT_SECRET",
        "scopes": ["user:email", "read:user"]
      },
      "google": {
        "client_id_env": "GOOGLE_CLIENT_ID",
        "client_secret_env": "GOOGLE_CLIENT_SECRET",
        "scopes": ["openid", "email", "profile"]
      }
    }
  },
  "middleware": {
    "logging": {
      "enabled": true,
      "level": "INFO"
    },
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 60
    },
    "cors": {
      "enabled": true,
      "allowed_origins": ["*"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE"],
      "allowed_headers": ["*"]
    }
  },
  "resources": {
    "cache": {
      "enabled": true,
      "ttl_seconds": 300
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "debug": true,
        "reload": true,
        "host": "localhost",
        "port": 8000
      },
      "production": {
        "debug": false,
        "reload": false,
        "host": "0.0.0.0",
        "port": 8000,
        "workers": 4
      }
    }
  }
}